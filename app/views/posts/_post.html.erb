<ul class= "list-unstyled align-items-center d-flex flex-column align-items-center w-75">
    <li class="card mb-3 w-75 mt-4" >
      <div class="col-md-12">
      <div class="card-body">
      <%= link_to user_post_path(@user.id, post.id), style:"text-decoration: none; color: black" do %> 
      <h4 class="card-title">Post #<%= post.id %></h4><br>
      <% end %>
      <h3><%= link_to post.title, user_post_path(@user.id, post.id), 
      class: 'text-decoration-none card-title text-black' %></h3>
      <p class="card-text" ><%= post.text %></p>
       <p class="card-text text-end">
        <small class="text-muted">
          comments: <%= !post.comments_counter ? 0 :  post.comments_counter %>,
          likes: <%= !post.likes_counter ? 0 :  post.likes_counter %>
        </small>
      </p>
      </div>
      </div>
    </li>
</ul>