<ul class= "list-unstyled align-items-center d-flex flex-column align-items-center w-75">
    <li class="card mb-3 w-75 mt-4" >
      <div class="col-md-12">
      <div class="card-body">
      <% user.each do |u| %>
      <% if post.author_id === u.id %>
      <div class="d-flex justify-content-between">
      <h4  class="card-title" > Post #<%= post.id %> by <%= u.name %> </h4>
      <span class="card-text text-end">
        <small class="text-muted">
          comments: <%= !post.comments_counter ? 0 :  post.comments_counter %>,
          likes: <%= !post.likes_counter ? 0 :  post.likes_counter %>
        </small>
      </span>
      </div><br>
      <h3 class="card-title"><%= post.title %></h3>
      <p class="card-text" ><%= post.text %></p>
      <% end %>
      <% end %>
      </div>
      </div>
    </li>
</ul>